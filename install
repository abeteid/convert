tx=$HOME/convert

NOCOLOR='\033[0m'
LIGHTGREEN='\033[1;32m'
YELLOW='\033[1;33m'


clear
if [[ ! -d "$tx" ]]
then
mkdir $tx &>/dev/null
cd $tx
else
cd $tx
fi
cd $tx

then
chmod +x convert
mv convert $tx

fi

function install {
echo "Please wait .."
echo " "
sleep 2
cd $tx
sleep 1
else
exit
fi
}

install
clear
echo " ======================= "
echo -e " ${LIGHTGREEN}Install CONVERT TOOL selesai "
echo " ======================= "
echo " "
echo -e " ${YELLOW}silahkan ketik exit dan jalankan TERMUX anda ${NOCOLOR}"
echo " "
echo -e " kemudian mengetikan ${LIGHTGREEN}./convert ${NOCOLOR}(huruf kecil semua ) "
exit